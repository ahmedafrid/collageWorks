
<%- include("partials/header"); -%>
<div class="container mt-4">

  <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
    <div class="col-md-6 p-lg-8 mx-auto my-5">
      <h1 class="display-4 fw-normal">Explore latest news around you..!</h1>
      <p class="lead fw-normal">Write or See what others say about trending news</p>
      <a class="btn btn-outline-secondary" href="#posts">Explore Posts</a>
      <a class="btn btn-outline-secondary" href="compose">Write a post</a>

    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
  </div>


<div id="posts">
  <h4 class="text-center">Recent Posts</h4>
  
  <% posts.forEach(function(post) { %>

    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
        <p class="username-color">Posted By: <strong class="d-inline-block mb-2 "><%= post.name %></strong></p>
        <h3 class="mb-0"><%= post.title %></h3>
        <div class="mb-1 text-muted"><%= post.date %></div>
        <p class="card-text mb-auto"><%= post.body.substring(0, 300) + "..." %></p>
        <a href="/post/<%=post.title%>" class="btn btn-primary btn-dark mt-2">Continue reading</a>
      </div>  
    </div>
    
<!--     
    <h1><%= post.title %></h1>
    <p class=""><%= post.body.substring(0, 200) + "..." %></p>

    <div class="mb-5">
      <a href="/post/<%=post.title%>" class="btn btn-primary btn-sm px-4">Read More</a>
    </div> -->

  <% }); %>
</div>

</div>
<%- include("partials/footer"); -%>
